//- Page allow user to view a post outside of the feed environment
extends side-nav-sublayout

append head
  - var content = doc;

block primary
    
  //- container for page title
  div(class='container-fluid')
    h1= title
    br
    
  div(class='container-xl')
    h2(style='float:left')= postname
    div(id='buttons', style='float:right')
      a(href='/edit/' + id)
        button(type='button' class='btn btn-success') Edit
    br
    br
    br
    div(id='output' class='border' style='padding:20px')
      | !{doc}

  div(class='container-fluid')
    a(href='/edit/')
      button(class='btn btn-primary mt-4') Back To List
      
