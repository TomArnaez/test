doctype html
head
    meta(charset='UTF-8')
di.contact
    include ./partial/msg
    h2 Email Us
    form(method='POST' action='contact/send')
        h3  * required

        p
            label * Full Name:
            div
            input(type='text' name='name' required=true)
        p
            label * Email Address:
            div
            input(type='email' name='email' required=true)
        p
            label(for='phone') Phone Number: (format: 07xxxxxxxxx or 020xxxxxxxx)
            br
            input#phone(type='tel' name='phone' pattern='[0-9]{11}' required= true)
        p
            label * Message Title:
            div
            input(type='text' name='title' required=true)
        p.full
            label * Message Body:
            div
            textarea(name='message' rows='8' cols='30' required=true)
        p.full
            button(type='submit') Submit
