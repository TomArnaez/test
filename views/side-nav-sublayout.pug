  style(type='text/css').
    body {
      background-color: var(--colour-secondary);
    }

    #navbar {
      height: 75px;
      width: 100%;
      position: fixed;
      z-index: 2;
      top: 0;
      left: 0;
      background-color: var(--colour-primary);
      padding-top: 10px;
      padding-bottom: 10px;
    }

    .side-panel{
      height: 100%;
      width: 250px;
      position: fixed;
      z-index: 1;
      top: 50px;
      left: 0;
      background-color: var(--colour-secondary);
      overflow-x: hidden;
      transition: 0.1s;
      padding-top: 50px;
    }

    .side-panel a {
      font-size: 30px;
    }

    /* .side-panel a:hover {
      color: #f1f1f1;
      text-decoration: none;
    } */

    #navbar-small {
      display: none;
    }

    @media (max-width: 990px) {
      #sidebar {
        margin-left: -250px;
      }
      #primary {
        margin-left: 0px;
        padding-right: 0px;
      }
      #navbar-small {
        display: inline;
      }
      #navbar-big {
        display: none;
      }

      .navbar-collapse {
        background-color: #ffffff;
        padding: 40px;
      }

      .nav-item {
        background-color: #ffffff;
        padding: 5px;
      }
    }

    @media (max-height: 400px) {

    }

    .primary {
      margin-left: 150px;
      width: 90%;
      height: 100%;
      background-color: var(--colour-secondary);
      padding-top: 15px;
    }

