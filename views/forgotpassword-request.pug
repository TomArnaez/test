extends layout

block content
    div(class='container-fluid text-center')
        h1(style="text-align:center") Forgot Password
        div(class="col-xl-3 col-lg-6 col-md-8 col-sm-10 mx-auto text-center form-group p-4 border rounded-lg")
            include ./partial/msg
            form(action='/admin/forgotpassword' method='POST')
                div(class="form-group w-100")
                  label(class="w-25" class="h6" for='username') Username:
                  input(class="w-75" id='username' name='username' placeholder='Username')
                div
                  button(type='submit' class='btn btn-primary w-100') Send Password Reset Link
