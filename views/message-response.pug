//- Page for admin to respond to a user question privatley

extends side-nav-sublayout

block primary
    
    //- container for page title
    div(class='container-fluid')
      h1= title
      br
      br
      
    div(class='container-xl')
        //- question submission form
        form(method='post')
            //- p #{custom_id}
            //- Quesiton
            div(class='form-group row')
              label(for='question' class='col-sm-2 col-form-label') Question: 
              div(class='col-sm-10')
                input(type='text' name='question' readonly class='form-control' value=question)
            br
            //- Response
            div(class='form-group row')
              label(for='message') Reply to Question:
              br
              textarea(name='message' class='form-control' minlength=20 rows='8' required=true)
            div(class='form-group row')
              div(class='custom-control custom-switch')
                input(type='checkbox' class='custom-control-input' id='switch')
                label(class='custom-control-label' for='swicth') CC this reponse
            div(class='form-group row')
              label(for='email' class='col-sm-2 col-form-label') CC email:
              div(class='col-sm-10')
                input(type='text' name='email' class='form-control' placeholder='example@email.com')
            br
            br
            //- submit button
            button(type='submit' class='btn btn-success') Submit
                
        
