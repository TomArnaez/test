//- Page for admin to respond to a user question privatley

extends side-nav-sublayout

block primary
    
    //- container for page title
    div(class='container-fluid')
      h1= title
      br
      br
      
    div(class='container-xl')
        //- question submission form
        form(method='post')
            //- p #{custom_id}
            //- Quesiton
            div(class='mb-3')
              label(for='question' class='form-label') Question: 
              input(type='text' name='question' readonly class='form-control' value=question)
            br
            //- Response
            div(class='mb-3')
              label(for='message' class='form-label') Reply to Question:
              br
              textarea(name='message' class='form-control' minlength=20 rows='8' required=true)
            div(class='mb-3 form-check')
              label(class='form-check-label') CC others in the Email
            div(class='form-floating mb-3')
              input(type='email' name='ccEmail' class='form-control' id='floatingInput' placeholder='example@email.com')
              label(for='floatingInput') one@example.com, two@example.com, ...
            br
            br
            //- submit button
            button(type='submit' class='btn btn-success') Submit
                
        
