extends layout

block content
    form
        .typeahead__container
            .typeahead__field
                .typeahead__query
                    input.js-typeahead(name='q' autocomplete='off')
                .typeahead__button
                    button(type='submit')
                        span.typeahead__search-icon

    if search
        h1 Results for #{searchQuery}
        ul
            each result in results
                li
                    a(href="/") #{result.title}
                ul
                    li #{result.text}
                hr